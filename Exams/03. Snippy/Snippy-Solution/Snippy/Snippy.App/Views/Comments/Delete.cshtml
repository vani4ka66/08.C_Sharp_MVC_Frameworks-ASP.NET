@model Snippy.App.Models.ViewModels.CommentViewModel
@{ 
    ViewBag.Title = "Delete comment";
}

<h2>Delete comment</h2>
Are you sure you want to delete this comment?
@Html.DisplayForModel()
@using (Html.BeginForm("ConfirmDelete", "Comments", new { id = Model.Id }))
{
    <input type="submit" class="btn btn-danger" value="Delete" />
    @Html.ActionLink("Cancel", "Details", "Snippets", new { id = Model.SnippetId }, new { @class = "btn btn-default" })
    @Html.AntiForgeryToken()
}