@model Snippy.App.Models.BindingModels.SnippetBindingModel
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>
</div>
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Code</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Code, new { @class = "form-control", rows = 4 })
    </div>
</div>
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Language</label>
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.LanguageId, ViewBag.Languages as IEnumerable<SelectListItem>, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Labels</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Labels, new { @class = "form-control" })
    </div>
</div>
@Html.AntiForgeryToken()