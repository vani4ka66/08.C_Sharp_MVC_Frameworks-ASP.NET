@model StreamPowered.App.Areas.Admin.Models.BindingModels.GameBindingModel
@using (Html.BeginForm("Add", "Games", new { area = "Admin" }, FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Title, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Title, new { placeholder = "Title", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-2">
            @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        </div><div class="col-md-8">
            @Html.TextAreaFor(m => m.Description, new { placeholder = "Description", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.SystemRequirements, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextAreaFor(m => m.SystemRequirements, new { placeholder = "System requirements", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.GenreId, new { @class = "control-label" })
        </div><div class="col-md-8">
            @Html.DropDownListFor(m => m.GenreId, ViewBag.Genres as IEnumerable<SelectListItem>, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label class="control-label">Images</label>
        </div>
        <div class="col-md-8">
            <div id="imageUrls"></div>
            @Ajax.ActionLink("+", "AddImageUrl", null, new AjaxOptions()
       {
           HttpMethod = "POST",
           UpdateTargetId = "imageUrls",
           InsertionMode = InsertionMode.InsertAfter
       }, htmlAttributes: new { @class = "btn btn-success" })
            @Html.EditorForMany(m => m.ImageUrls, "ImageUrls")
        </div>
    </div>
    <input type="submit" value="Add" class="btn btn-success" />
    <button class="btn btn-default">Cancel</button>
}